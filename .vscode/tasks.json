{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "printToPDF",
      "type": "shell",
      "command": "mkdir -p pdfs && enscript -C -T 2 -p - -M Letter -Ecpp --color -fCourier8 src/*.cpp test/*.cpp include/*.h | ps2pdf - pdfs/src.pdf",
      "options": { "cwd": "${workspaceFolder}" },
      "group": { "kind": "build", "isDefault": true },
      "problemMatcher": []
    },
    {
      "label": "build",
      "type": "shell",
      "command": "make",
      "options": { "cwd": "${workspaceFolder}" },
      "group": "build",
      "problemMatcher": []
    }
  ]
}
